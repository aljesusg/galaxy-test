<div class="container">
  <h1><%= "#{ User.model_name.human}" %></h1>

  <div class="form-group">
    <div class="control-label">
      <%= User.human_attribute_name 'image' %>
    </div>
    <%= image_for @user %>
  </div>

  <div class="form">
    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'full_name' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.full_name %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'short_name' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.short_name %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'github_user' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.github_user %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'karma' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.karma %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'email' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.email %>
      </div>
    </div>


  <p>
    <%= link_to t(".edit_user"), edit_user_registration_path(@user), class: "btn btn-primary" %>
  </p>

</div>
